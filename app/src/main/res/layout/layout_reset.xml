<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffbcffbd"
        android:id="@+id/layout_Timer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="9:54"
            android:id="@+id/txt_Timer"
            android:textSize="50dp"
            android:textStyle="bold"
            android:visibility="visible"
            android:textIsSelectable="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffbd1"
        android:layout_weight="2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Reset"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/imok"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_margin="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffbd1">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toggle_active"
            android:id="@+id/toggle_Active"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textOff="@string/toggle_active_off"
            android:textOn="@string/toggle_active_on"
            android:checked="true"
            android:layout_margin="10dp"
            android:background="@android:color/transparent" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Settings"
            android:src="@drawable/ic_action_settings"
            android:contentDescription="@string/button_settings_content_description"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp" />

        <ImageButton
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:id="@+id/btnEmergencyCall"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_bluelight"
            android:scaleType="fitStart"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/toggle_Active"
            android:background="@android:color/transparent"
            android:contentDescription="@string/btnEmergencyCall" />

    </RelativeLayout>
</LinearLayout>